#!/bin/sh

# Get volume percent
volume="$(pactl get-sink-volume @DEFAULT_SINK@ | grep -o '[0-9]*%' | head -n 1 | tr -d %)"
# Get if volume is muted
mute="$([ "$(pactl get-sink-mute @DEFAULT_SINK@ | awk '{print $2}')" = "yes" ] && printf " (muted)")"

#Set notification icon
if [ -n "$mute" ] || [ "$volume" -eq 0 ]; then
    icon="audio-volume-muted"
else
    if [ "$volume" -le 30 ]; then
        icon="audio-volume-low"
    elif [ "$volume" -le 60 ]; then
        icon="audio-volume-medium"
    else
        icon="audio-volume-high"
    fi
fi

# Send notification
notify-send "Volume: ${volume}%${mute}" -h int:value:"${volume}" -i "${icon}" -r 10002 -t 2000 -u normal
