# Save screenshot of selection
Print
    maimpick "Select"

# Save screenshot of window
shift + Print
    maimpick "Window"

# Save screenshot of full screen
alt + Print
    maimpick "Screen"

# Copy screenshot of selection
ctrl + Print
    maimpick "(Copy) Select"

# Copy screenshot of window
ctrl + shift + Print
    maimpick "(Copy) Window"

# Copy screenshot of full screen
ctrl + alt + Print
    maimpick "(Copy) Screen"

# Raise brightness
XF86MonBrightnessUp
    brightnessctl -q set +5%; brightness-notify

# Lower brightness
XF86MonBrightnessDown
    brightnessctl -q set 5%-; brightness-notify

# Raise volume
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%; volume-notify

# Lower volume
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%; volume-notify

# Mute/unmute the volume
XF86AudioMute
    pactl set-sink-mute 0 toggle; volume-notify

# Open program launcher
super + q
    rofi -show drun

# Open window switcher
super + w
    rofi -show window

# Open command launcher
super + r
    rofi -show run

# Open clipboard history
super + v
    clipcat-menu

# Open file manager
super + e
    pcmanfm

# Open terminal
super + t
    lxterminal

# Open task manager
ctrl + shift + Escape
    lxtask
